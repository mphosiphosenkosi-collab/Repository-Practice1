6. Testing Strategy
6.1 Test Structure
al
// RoomBookingTest.Codeunit.al
codeunit 50110 "Room Booking Test"
{
    Subtype = Test;
    
    var
        LibraryAssert: Codeunit "Library Assert";
        RoomResource: Record "Room Resource";
        Any: Codeunit Any;
        
    [Test]
    procedure TestRoomCreation()
    var
        RoomNo: Code[20];
    begin
        // [SCENARIO] Create a new room resource
        // [GIVEN] No room exists
        RoomResource.DeleteAll();
        
        // [WHEN] Creating a new room
        RoomNo := Any.AlphanumericText(10);
        CreateRoom(RoomNo, 'Conference Room A', 10, 50.00);
        
        // [THEN] Room should exist
        LibraryAssert.IsTrue(RoomResource.Get(RoomNo), 'Room should be created');
        LibraryAssert.AreEqual('Conference Room A', RoomResource.Description, 'Description should match');
    end;
    
    [Test]
    procedure TestCapacityValidation()
    var
        RoomNo: Code[20];
    begin
        // [SCENARIO] Validate room capacity constraints
        // [GIVEN] A room with capacity 10
        RoomNo := Any.AlphanumericText(10);
        CreateRoom(RoomNo, 'Test Room', 10, 50.00);
        
        // [WHEN] Setting invalid capacity
        asserterror RoomResource.Validate(Capacity, 0);
        
        // [THEN] Error should be raised
        LibraryAssert.ExpectedError('must be greater than 0');
    end;
    
    local procedure CreateRoom(RoomNo: Code[20]; Description: Text[100]; Capacity: Integer; HourlyRate: Decimal)
    begin
        RoomResource.Init();
        RoomResource."No." := RoomNo;
        RoomResource.Description := Description;
        RoomResource.Capacity := Capacity;
        RoomResource."Hourly Rate" := HourlyRate;
        RoomResource.Insert(true);
    end;
}
