5. Build & Deployment
5.1 Build Pipeline Configuration
yaml
# .github/workflows/al-build.yml
name: AL Extension CI/CD

on:
  push:
    branches: [ main, develop ]
    paths:
      - 'src/al-extension/**'
  pull_request:
    branches: [ main, develop ]

jobs:
  build-and-test:
    runs-on: windows-latest
    
    steps:
    - uses: actions/checkout@v3
    
    - name: Setup AL Environment
      uses: microsoft/AL-Go-Actions/setup@v1
      
    - name: Download Symbols
      run: |
        cd src/al-extension
        al package cache --packageCachePath ./.alpackages
        
    - name: Build Extension
      run: |
        cd src/al-extension
        al package --project . --out .output/roombooking.app
      
    - name: Run Tests
      run: |
        cd src/al-extension
        al test run --testSuiteName "DEFAULT" --resultsFile .output/TestResults.xml
      
    - name: Upload Artifacts
      uses: actions/upload-artifact@v3
      with:
        name: al-extension
        path: src/al-extension/.output/
        
    - name: Publish Test Results
      uses: dorny/test-reporter@v1
      if: always()
      with:
        name: AL Tests
        path: src/al-extension/.output/TestResults.xml
        reporter: junit
