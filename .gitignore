    DataClassification = ToBeClassified;
    
    fields
    {
        field(1; "No."; Code[20])
        {
            Caption = 'No.';
            DataClassification = CustomerContent;
            
            trigger OnValidate()
            begin
                // Validation logic here
            end;
        }
        
        field(2; Description; Text[100])
        {
            Caption = 'Description';
            DataClassification = CustomerContent;
        }
        
        field(10; Capacity; Integer)
        {
            Caption = 'Capacity';
            DataClassification = CustomerContent;
            MinValue = 1;
            MaxValue = 100;
        }
        
        field(20; "Hourly Rate"; Decimal)
        {
            Caption = 'Hourly Rate';
            DataClassification = CustomerContent;
        }
    }
    
    keys
    {
        key(PK; "No.")
        {
            Clustered = true;
        }
    }
    
    // Business logic methods
    procedure CalculateBookingCost(DurationHours: Decimal): Decimal
    begin
        exit("Hourly Rate" * DurationHours);
    end;
